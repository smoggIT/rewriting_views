<%= call_hook :view_account_login_top %>
<div id="login-form">
<%= form_tag(signin_path) do %>
<%= back_url_hidden_field_tag %>

<div class="login-row">

    <label for="username"><%=l(:field_login)%>:</label>
    <%= text_field_tag 'username', params[:username], :tabindex => '1' %>

</div>

<div class="login-row">

   <label for="password"><%=l(:field_password)%>:</label>
   <%= password_field_tag 'password', nil, :tabindex => '2' %>

</div>

<% if Setting.openid? %>

<div class="login-row">

  <label for="openid_url"><%=l(:field_identity_url)%></label>
  <%= text_field_tag "openid_url", nil, :tabindex => '3' %>

</div>

<% end %>


<div class="submit-row">

        <% if Setting.autologin? %>
        <label for="autologin"><%= check_box_tag 'autologin', 1, false, :tabindex => 4 %> <%= l(:label_stay_logged_in) %></label>
        <% end %>


        <% if Setting.lost_password? %>
            <%= link_to l(:label_password_lost), lost_password_path %>
        <% end %>

        <input class="login-btn" type="submit" name="login" value="<%=l(:button_login)%>" tabindex="5"/>

</div>


<% end %>
</div>

<div id="login-claim">
  <h2 class="claim-headertext">
  Many small issues<br>
  One Big Solution.<br>
  </h2>
  <span class="claim-text">Enter your credentials and login into <%= page_header_title %>.</span>
</div>    


<%= call_hook :view_account_login_bottom %>

<% if params[:username].present? %>
<%= javascript_tag "$('#password').focus();" %>
<% else %>
<%= javascript_tag "$('#username').focus();" %>
<% end %>
